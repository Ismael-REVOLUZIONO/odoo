pipeline {
    agent {
        docker {
            image 'odoo:16.0'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Ismael-REVOLUZIONO/prueba-jenkins.git'
            }
        }
        stage('Build') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                script {
                    def db = docker.image('postgres:13.0').withRun("-e POSTGRES_USER=odoo -e POSTGRES_PASSWORD=odoo -e POSTGRES_DB=db_prueba -p 5432:5432")
                    db.start()
                }
                sh 'odoo -d odoo --db_host localhost:16000 -r odoo --test-enable --stop-after-init'
            }
        }
    }
}
